<div class="row">
    <h1 class="bg-info text-white">System User Ekle</h1>
</div>
<div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8">
        <form asp-action="Index" asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="UserName">Kullanıcı Adı : </label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdentificationNumber">T.C. Kimlik No : </label>
                <input asp-for="IdentificationNumber" class="form-control" />
                <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Score">Puan : </label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailAddress">E-Posta Adresi : </label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Şifre : </label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PasswordConfirmation">Şifre Tekrar : </label>
                <input asp-for="PasswordConfirmation" class="form-control" />
                <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
            </div>
        </form>
    </div>
</div>
